
#include "drivers_headers.h"
#include "tm4c123gh6pm.h"
void pauseCooking(void)
{
	
 
	

	 while (readSW1()==0)
	 {
		 void port_init (F);
		 GPIO_PORTF_DATA_R=GPIO_PORTF_DATA_R ^0x0E;
	   generic_Delay(1000);
	    
	 } //blink leds
			
	while(1)
	{
		void port_init (F);
		 GPIO_PORTF_DATA_R=GPIO_PORTF_DATA_R ^0x0E;
	   generic_Delay(1000);
	   
		
   if (readSW2() == 0 && readSW3() == 1 )   //sw2 is clicked and door is closed cont cooking
		{state =  Cooking;
		break;
		}
	
	
   else if (readSW1() ==0)  //clicked 2nd time stop cooking
	
		{state = IDLE ; 
		 break;
		}
	
   
	
 }
}

